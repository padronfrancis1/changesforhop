                        {{state.abbrev}}
                      </md-option>
                    </md-select>
                    <div ng-messages="signupForm.gender.$error" role="alert">
                      <div ng-message-exp="['required', 'minlength', 'maxlength']" style="color: red;">
                        Input must be between 2 and 100 characters long.
                      </div>
                    </div>
                  </md-input-container>

                  <label>Status</label>
                  <md-input-container class="md-block">                    
                    <md-select ng-model="statusState" id="status" name="status" required minlength="2" maxlength="100">
                      
                      <md-option ng-repeat="state in statuses" ng-value="state.abbrev">
                        {{state.abbrev}}
                      </md-option>
                    </md-select>
                    <div ng-messages="signupForm.status.$error" role="alert">
                      <div ng-message-exp="['required', 'minlength', 'maxlength']" style="color: red;">
