            <md-card>

              <md-toolbar class="md-theme-indigo">
                <h1 class="md-toolbar-tools">Add Clients</h1>
              </md-toolbar>

              <md-card-content>
                <form method="POST" name="signupForm" action="/admin/add/client">

                <label>First Name</label>
                  <md-input-container class="md-block">
                    <input type="text"
                    id="fname" name="fname"
                    ng-model="fname"
                    required minlength="2" maxlength="100"
                    >
                    <div ng-messages="signupForm.fname.$error" role="alert">
                      <div ng-message-exp="['required', 'minlength', 'maxlength']" style="color: red;">
                        Input must be between 2 and 100 characters long.
                      </div>
                    </div>
                  </md-input-container>

                  <label>Middle Name</label>
                  <md-input-container class="md-block">
                    <input type="text"
                    id="mname" name="mname"
                    ng-model="mname"
                    required minlength="2" maxlength="100"
                    >
                    <div ng-messages="signupForm.mname.$error" role="alert">
                      <div ng-message-exp="['required', 'minlength', 'maxlength']" style="color: red;">
                        Input must be between 2 and 100 characters long.
                      </div>
                    </div>
                  </md-input-container>

                  <label>Last Name</label>
                  <md-input-container class="md-block">
                    <input type="text"
                    id="lname" name="lname"
                    ng-model="lname"
                    required minlength="2" maxlength="100"
                    >
                    <div ng-messages="signupForm.lname.$error" role="alert">
                      <div ng-message-exp="['required', 'minlength', 'maxlength']" style="color: red;">
                        Input must be between 2 and 100 characters long.
                      </div>
                    </div>
                  </md-input-container>

                  <label>Age</label>
                  <md-input-container class="md-block">
                    <input type="number"
                    id="age" name="age"
                    ng-model="age"
                    required minlength="1" maxlength="100"
                    >
                    <div ng-messages="signupForm.age.$error" role="alert">
                      <div ng-message-exp="['required', 'minlength', 'maxlength', 'number']" style="color: red;">
                        Input must be a number.
                      </div>
                    </div>


                    <!-- <div role="alert">
